<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RuleML xmlns="http://www.ruleml.org/1.0/xsd">
    <Assert>
        <Rule>
            <if>
                <And>
                    <And>
                        <Atom>
                            <op>
                                <Rel>LessThan</Rel>
                            </op>
                            <Var>VAR1</Var>
                            <Ind>31</Ind>
                        </Atom>
                        <Atom>
                            <op>
                                <Rel>Person</Rel>
                            </op>
                            <oid>
                                <Var>$p</Var>
                            </oid>
                            <slot>
                                <Ind>name</Ind>
                                <Ind>Tisho</Ind>
                            </slot>
                            <slot>
                                <Ind>age</Ind>
                                <Var>VAR1</Var>
                            </slot>
                        </Atom>
                    </And>
                    <Atom>
                        <op>
                            <Rel>Buy</Rel>
                        </op>
                        <oid>
                            <Var>$b</Var>
                        </oid>
                        <slot>
                            <Ind>buyer</Ind>
                            <Var>$p</Var>
                        </slot>
                        <slot>
                            <Ind>seller</Ind>
                            <Var>$s</Var>
                        </slot>
                        <slot>
                            <Ind>item</Ind>
                            <Ind>Amazon</Ind>
                        </slot>
                    </Atom>
                    <Atom>
                        <op>
                            <Rel>Keep</Rel>
                        </op>
                        <slot>
                            <Ind>keeper</Ind>
                            <Var>$p</Var>
                        </slot>
                        <slot>
                            <Ind>item</Ind>
                            <Ind>Amazon</Ind>
                        </slot>
                    </Atom>
                </And>
            </if>
            <do>
                <Assert>
                    <Atom>
                        <Rel>Own</Rel>
                        <slot>
                            <Ind>item</Ind>
                            <Var>Amazon</Var>
                        </slot>
                        <slot>
                            <Ind>owner</Ind>
                            <Var>$p</Var>
                        </slot>
                    </Atom>
                </Assert>
            </do>
        </Rule>
    </Assert>
</RuleML>