<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RuleML xmlns="http://www.ruleml.org/1.0/xsd">
    <Assert>
        <Rule>
            <if>
                <And>
                    <Atom>
                        <op>
                            <Rel>buy</Rel>
                        </op>
                        <slot>
                            <Ind>buyer</Ind>
                            <Ind>Ti6o</Ind>
                        </slot>
                        <slot>
                            <Ind>item</Ind>
                            <Var>I</Var>
                        </slot>
                        <slot>
                            <Ind>seller</Ind>
                            <Var>VAR1</Var>
                        </slot>
                    </Atom>
                    <Atom>
                        <op>
                            <Rel>keep</Rel>
                        </op>
                        <slot>
                            <Ind>keeper</Ind>
                            <Ind>Ti6o</Ind>
                        </slot>
                        <slot>
                            <Ind>item</Ind>
                            <Var>I</Var>
                        </slot>
                    </Atom>
                </And>
            </if>
            <do>
                <Assert>
                    <Atom>
                        <op>
                            <Rel>own</Rel>
                        </op>
                        <slot>
                            <Ind>item</Ind>
                            <Var>I</Var>
                        </slot>
                        <slot>
                            <Ind>owner</Ind>
                            <Ind>Ti6o</Ind>
                        </slot>
                    </Atom>
                </Assert>
            </do>
        </Rule>
    </Assert>
</RuleML>
